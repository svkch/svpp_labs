<Window x:Class="svpp_lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:svpp_lab4" 
        xmlns:thrd="clr-namespace:System.ComponentModel;assembly=System"
        mc:Ignorable="d"
        Title="Lab4" Height="350" Width="700">
    <Grid>
        <StackPanel Margin="10">
            <Button Name="CalcDispatcher" Content="Вычислить с помощью Dispatcher" Margin="0,10" Width="200" Click="CalcDispatcher_Click"/>
            <Button Name="CalcBgWorker" Content="Вычислить с помощью BackgroundWorker" Margin="0,10" Width="250" Click="CalcBgWorker_Click"/>
            <ProgressBar Name="progressBar" Height="20" Margin="10"/>
            <TextBlock Name="resultTB" Margin="0,10" Text="Результат: "/>
        </StackPanel>
    </Grid>
</Window>
